<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Title -->
    <style name="TxtTile">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TxtTile.Small" parent="TxtTile" />

    <style name="TxtTile.Small.Bold" parent="TxtTile.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TxtTile.Medium" parent="TxtTile">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTitle.Big" parent="TxtTile">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
